<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-commerce</title>
    <link rel="stylesheet" href="/css/produto.css">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  
  <%- include('./repeat_views/header'); %>
  
  <body>
    
    <div class="page-container">
      
      <div class="img-predesc-container">
        
        <section>
          <div class="tumbs">
            <a href=""><img class="mini-img" src="<%= produto.imgProduto %>" alt=" <%= produto.nome %>"></a>
            <a href=""><img class="mini-img" src="<%= produto.imgProduto %>" alt=" <%= produto.nome %>"></a>
            <a href=""><img class="mini-img" src="<%= produto.imgProduto %>" alt=" <%= produto.nome %>"></a>
            <a href=""><img class="mini-img" src="<%= produto.imgProduto %>" alt=" <%= produto.nome %>"></a>
          </div>
          
          <div>
            <a href=""><img class="picture"src="<%= produto.imgProduto %>" alt=" <%= produto.nome %>"></a>
          </div>
        </section>
        
        <div class="pre-description">
          <h3 id="nome"> <%= produto.nome %> </h3>
          <div class="top-valor">
          <span class="reais">R$</span>
          <p class="valor" id="valor"><%= produto.preco.replace('.',',') %> </p>
          </div>
          <p> <%= produto.descricao %></p>

          <span>03 disponíveis</span>
          
          <div>
            
            <form id="form">
              <h4>QTD</h4>
              <input type="number" min="1" max="20" value=1 name="quantidade" id="quantidade">
              <button type="submit"><img src="/images/shopping-cart.png" alt="">colocar no carrinho</button>
            </form> 
          </div>

        </div>
      </div>
      <!-- Botões descrição e informações adicionais -->
      <div class="buttons">
        <div class="btn-description" id="btn-description" onclick="descriptionBtn()"><h5>DESCRIÇÃO</h5></div>
        <div class="btn-moreInfo" id="btn-moreInfo" onclick="moreInfoBtn()"><h5>INFORMAÇÕES ADICIONAIS</h5></div>
      </div>
      <!-- Descrição/Informação Adicional -->
      <div class="infos">
        <p id="description" > <%= produto.descricao %> </p>
          
          <p id="moreInfo">
            Peso: 2 kg <br>
            Dimensões: 10 × 10 × 15 cm <br>
            Cor: Rosa <br>
            Material: Madeira</p>
            
          </div>
          
        </div>  
  <!-- Scripts  -->  
  <script src="/javascripts/produto.js"></script>
  
  </body>

  <%- include('./repeat_views/footer'); %>
</html>
