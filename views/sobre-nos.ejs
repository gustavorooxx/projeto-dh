        <p id="info2" >
        <a href="https://www.facebook.com"> <img class="face" src="images/facebook2.png" alt=""></a>
        <a href="https://www.instagram.com"><img class="insta" src="/images/instagram2.png" alt=""></a>
        </p>
                  
    </div>
</div>
    

  </div>


<!-- Script Btn -->
<script>
    function mediaBtn() {

      var btnSobre = document.getElementById("btn-sobre");
      var btnMedia = document.getElementById("btn-socialmedia")
      var infoSobre = document.getElementById("info1")
      var infoMedia = document.getElementById("info2")

      btnSobre.style.backgroundColor = "white"
      btnSobre.style.color = "black"
      btnMedia.style.backgroundColor = "#003884"
      btnMedia.style.color = "white"
      infoSobre.style.display = "none"
      infoMedia.style.display = "block"
    }

    function sobreBtn() {

      var btnSobre = document.getElementById("btn-sobre");
      var btnMedia = document.getElementById("btn-socialmedia")
      var infoSobre = document.getElementById("info1")
      var infoMedia = document.getElementById("info2")

      btnMedia.style.backgroundColor = "white"
      btnMedia.style.color = "black"
      btnSobre.style.backgroundColor = "#003884"
      btnSobre.style.color = "white"
      infoSobre.style.display = "block"
      infoMedia.style.display = "none"
}
</script>


  </body>

